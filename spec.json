{
	"$schema": "../argspec/arguments.schema.json",
	"program": "tester",
	"args": [
		{
			"mandatory": false,
			"short": "-h",
			"long": "--help",
			"dest": "HELP",
			"type": "help",
			"default": "false",
			"help": "display a help message and exit"
		},
		{
			"mandatory": false,
			"short": "-*",
			"dest": "HELP_2",
			"type": "help",
			"default": "false",
			"help": "display a help message and exit"
		},
		{
			"mandatory": false,
			"dest": "verbose",
			"short": "-v",
			"long": "--verbose",
			"type": "string",
			"default": "Hello, world!",
			"help": "set output verbosity"
		},
		{
			"mandatory": true,
			"dest": "file",
			"short": "-i",
			"long": "--input",
			"type": "string",
			"default": "Hello, world!",
			"help": "set input file"
		},
		{
			"mandatory": true,
			"dest": "x",
			"long": "--something-only-long",
			"type": "int",
			"default": "0",
			"help": "set some X"
		},
		{
			"mandatory": true,
			"dest": "out",
			"short": "-o",
			"long": "--output-to",
			"type": "string",
			"default": "-",
			"help": "set output file"
		}
	]
}